{{!< main}}
<div class="row">
    <div class="large-12 columns">
        <h1>Find users</h1>
        <p>Search by username</p>
        <form action="/friends/search" method="GET">
            <div id="errors"></div>
            <div class="row collapse">
                <div class="small-10 columns">
                    <input id="username" type="text" name="username" placeholder="gismo">
                </div>
                <div class="small-2 columns">
                    <button class="button prefix">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
        <h1>Following</h1>
        {{#each user.following}}
        <h2>{{this.username}}</h2>
        {{else}}
        <p>You should get some friends</p>
        {{/each}}
    </div>
    <div class="large-6 columns">
        <h1>Followers</h1>
        {{#each user.followers}}
        <h2>{{this.username}}</h2>
        {{else}}
        <p>You should get some fans</p>
        {{/each}}
    </div>
</div>

{{#content "footer"}}
<script>
$(document).foundation();
</script>
{{/content}}
