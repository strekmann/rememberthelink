{{!< main}}
<div id="index">
    <section class="hero">
        <div class="row">
            <div class="large-7 columns">
                <span class="header">remember the link</span>
                <span class="description">{{__ "a place to store and share links"}}</span>
            </div>
            <div class="large-5 columns hide-for-small">
                <img class="right" src="/img/screenshot.png" alt="screenshot"/>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="large-12 columns"><p>{{__ "We're working on it"}}</p></div>
        </div>
        <div class="bubbles">
            <img src="/img/bubbles.png">
            <div class="row">
                <div class="small-4 columns text-center"><p>{{__ "Add"}}</p></div>
                <div class="small-4 columns text-center"><p>{{__ "Tag"}}</p></div>
                <div class="small-4 columns text-center"><p>{{__ "Share"}}</p></div>
            </div>
        </div>
        <div class="row popular">
            <div class="large-6 columns">
                <h2>{{__ "Popular tags"}}</h2>
                <ul>
                    {{#each tags}}
                    <li>{{this}}</li>
                    {{/each}}
                </ul>
                <p>{{__ "Total number of tags"}}: {{tag_count}}</p>
            </div>
            <div class="large-6 columns">
                <h2>{{__ "Popular urls"}}</h2>
                <ul>
                    {{#each urls}}
                    <li><a href="{{this}}">{{displayurl this}}</a></li>
                    {{/each}}
                </ul>
                <p>{{__ "Total number of urls"}}: {{url_count}}</p>
            </div>
        </div>
    </section>

    <section class="bookmarklet">
        <div class="row">
            <div class="large-6 columns large-centered">
                <span class="header">{{__ "Bookmarklet"}}</span>
                <span class="description">{{__ "drag this button to your toolbar"}}</span>
                <a class="fanzybutton" href="javascript:var l=window.location.href;window.location.href='{{url}}/new?url='+l;">{{__ "Remember"}}</a>
            </div>
        </div>
    </section>
</div>

{{#content "footer"}}
<script>
    require('s7n').base.indexView();
</script>
{{/content}}
