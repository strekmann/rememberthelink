{{!< main}}
<section id="links_index">
    <div class="row">
        <div class="large-8 columns large-centered">
            <form class="new" action="/new">
                <div id="errors"></div>
                <div class="row collapse">
                    <div class="small-10 columns">
                        <input id="url" type="text" name="url" placeholder="http://new.link.now/">
                    </div>
                    <div class="small-2 columns">
                        <button class="button prefix">{{__ "Save"}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="small-12 columns">
            <ul class="links">
                {{#each links}}
                <li class="clearfix">                
                    <div class="link">
                        <h2 class="title"><a href="{{url}}">{{title}}</a></h2>
                        <div class="controls">
                            {{#if private}}<i title="private" class="icon-shield"></i>{{/if}}
                            <a title="share" class="share"><i class="icon-share"></i></a>
                            <a title="edit" class="edit" href="edit/{{_id}}"><i class="icon-edit"></i></a>
                            <a title="delete" class="delete"><i class="icon-remove"></i></a>
                            <a class="sure" style="display: none">delete!</a>
                        </div>
                        <div class="subtext">
                            <span class="date">{{datetimeformat created format="Do MMM"}}</span>&nbsp;
                            <i class="icon-link"></i> <span class="url">{{url}}</span>
                        </div>
                        <div class="description">{{description}}</div>
                        <div class="tags">
                            <i class="icon-tags"></i>
                            {{#each tags}}
                            <a class="tag" href="/tags/{{this}}">{{this}}</a>
                            {{/each}}
                        </div>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns" style="text-align: center; margin-bottom: 20px;">
            <a href="?page={{previous}}">Previous</a>
            Â·
            <a href="?page={{next}}">Next</a>
        </div>
    </div>
</section>

