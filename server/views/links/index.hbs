{{!< main}}
<div class="large-12 columns">
    <form action="new">
        <div id="errors"></div>
        <div class="row collapse">
            <div class="small-10 columns">
                <input id="url" type="text" name="url" placeholder="http://new.link.now/">
            </div>
            <div class="small-2 columns">
                <button class="button prefix">Save</button>
            </div>
        </div>
    </form>

    {{#each links}}
    <div class="clearfix">
        <form action="edit" method="post" style="display:none" class="editform">
            <input type="text" class="title" name="title" value="{{title}}">
            <input type="text" class="description" name="description" value="{{description}}">
            <input type="hidden" name="url" value="{{url}}">
            <div class="right">
                <a href="" class="cancel_edit button secondary">Cancel</a>
                <button class="submit">Send</button>
            </div>
        </form>
        <div class="link">
            <a href="{{url}}" class="title" style="font-size: 1.5em; font-weight: bold; display: block; margin-top: 20px;">{{title}}</a>
            <span>{{ago created}}</span>,
            by <span>{{creator.name}}</span>
            <a class="edit">edit</a>
            <a class="delete">delete</a>
            <a class="sure" style="display:none">Sure?</a>
            <br>
            <span>{{url}}</span> â€”
            <span class="description">{{description}}</span>
        </div>
    </div>
    {{/each}}
    <hr>
    <h1>Bookmarklet</h1>
    <p>Drag this button to your toolbar</p>
    <a class="button" href="javascript:var l=window.location.href;window.location.href='{{url}}new?url='+l;">Remember</a>
    {{url}}
</div>

{{#content "footer"}}
<script>
$(document).foundation();
$('a.delete').on('click', function (ev) {
    console.log("hei");
    ev.preventDefault();
    var sure = $(this).parent().find('.sure');
    console.log(sure);
    sure.show();
    return false;
});
$('a.sure').on('click', function (ev) {
    console.log("hopp");
    ev.preventDefault();
    var self = $(this);
    var block = $(this).parent().parent();
    var url = block.find('.link .title').attr('href');
    block.hide();
    $.post('delete', {url: url}, function(data, status, xhr) {
        if (status !== "success") {
            alert("Could not delete");
            self.hide();
            block.show();
        }
        console.log(data);
        console.log(status);
        console.log(xhr);
    });
    return false;
});
$('a.edit').on('click', function (ev) {
    ev.preventDefault();
    var block = $(this).parent().parent();
    var form = block.find('form');
    var link = block.find('.link');
    form.show();
    link.hide();
});

$('a.cancel_edit').on('click', function (ev) {
    ev.preventDefault();
    var block = $(this).parent().parent().parent();
    var form = block.find('form');
    var link = block.find('.link');
    $(form).hide();
    $(link).show();
});

$('form.editform').on('submit', function() {
    var form = $(this);
    var block = form.parent();
    var link = block.find('.link');
    var edit_link = block.find('.edit');
    var title = form.find('input.title').val();
    var description = form.find('input.description').val();
    $(link.find('.title')).text(title);
    $(link.find('.description')).text(description);
    form.hide();
    link.show();
    edit_link.show();

    $.post($(this).attr('action'), $(this).serialize(), function(data, status, xhr) {
        if (status !== "success") {
            alert("Could not update");
            form.show();
            link.hide();
            edit_link.hide();
        }
    });
    return false;
});
</script>
{{/content}}
