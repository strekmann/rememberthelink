{{!< main}}
<div class="row">
    <div class="large-12 columns">
        <h2>{{link.title}}</h2>

        <form action="/edit" method="post" class="editform custom">
            <div class="row">
                <div class="large-2 small-3 columns"><label class="inline right">Title</label></div>
                <div class="large-10 small-9 columns"><input type="text" class="title" name="title" value="{{link.title}}"></div>
            </div>
            <div class="row">
                <div class="large-2 small-3 columns"><label class="inline right">Description</label></div>
                <div class="large-10 small-9 columns"><input type="text" class="description" name="description" value="{{link.description}}"></div>
            </div>
            <div class="row">
                <div class="large-2 small-3 columns"><label class="inline right">Tags</label></div>
                <div class="large-10 small-9 columns"><input type="text" class="tags" name="tags" value="{{link.joined_tags}}"></div>
            </div>
            <div class="row">
                <div class="large-2 small-3 columns"><label class="inline right">&nbsp;</label></div>
                <div class="large-10 small-9 columns"><input type="checkbox" class="private" name="private"{{#if private}} checked{{/if}}> private</div>
            </div>
            <input type="hidden" name="id" value="{{link._id}}">
            <div class="row">
                <div class="large-2 small-3 columns"><label class="right"></label></div>
                <div class="large-10 small-9 columns">
                    <button type="button" class="cancel_edit small button secondary">Cancel</button>
                    <button class="submit small button">Save</button>
                </div>
            </div>
        </form>

    </div>
</div>

{{#content "footer"}}
<script>
    $.s7n.initEditLink();
</script>
{{/content}}