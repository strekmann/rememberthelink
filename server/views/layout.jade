doctype html

html(lang=lang dir=lang_dir)
  head
    meta(charset="utf-8")
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="author" content="Strekmann")
    link(href="/css/site.css?"+stamp rel="stylesheet")

    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

    script(src="/js/modernizr.js")
    link(rel="shortcut icon" href="/img/favicon.png")

  body
    nav.top-bar(data-topbar)
      ul.title-area
        li.name
          h1
            a(href="/")= __("Boilerplate")

      section.top-bar-section
        ul.right
          if active_user
            li
              a(href="/account")= __("Account")
            li
              a(href="/logout")= __("Logout")
          else
            li
              a(href="/login")= __("Login")

    block content

    script(src="/js/vendor.js?"+stamp)
    script(src="/js/site.js?"+stamp)

    script.
      var doc = $(document);
      doc.foundation();

      var scroll_added;
      doc.scroll(function(e){
        if (doc.scrollTop() > 5){
          if (scroll_added) { return; }
          scroll_added = true;
          $('body').addClass('scroll');
        }
        else {
          $('body').removeClass('scroll');
          scroll_added = false;
        }
      });

    block javascript
