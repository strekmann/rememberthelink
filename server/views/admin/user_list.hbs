{{!< main}}

<section id="user-list">
    <div class="row">
        <div class="large-12 columns">
            <h2>{{__ "All users"}} ({{users.length}})</h2>
            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Name</th>
                        <th>Joined</th>
                        <th>Links</th>
                        <th>Active</th>
                        <th>Admin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr data-id="{{this._id}}">
                        <td><a href="/profile/{{this.username}}">{{this.username}}</a></td>
                        <td>{{this.name}}</td>
                        <td>{{datetimeformat this.created}}</td>
                        <td>{{this.link_count}}</td>
                        <td><input type="checkbox" class="is_active"{{#if this.is_active}} checked{{/if}}></td>
                        <td><input type="checkbox" class="is_admin"{{#if this.is_admin}} checked{{/if}}></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns" style="text-align: center; margin-bottom: 20px;">
            <a href="?page={{previous}}">{{__ "Previous"}}</a>
            Â·
            <a href="?page={{next}}">{{__ "Next"}}</a>
        </div>
    </div>
</section>
{{#content "footer"}}
<script>
    require('s7n').admin.userListView();
</script>
{{/content}}

